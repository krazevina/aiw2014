<div class="row">
  <div class="col-sm-12">
    <h1>Create a demo</h1>
    <%= form_for @demo, :url => demo_create_path, :html => {:class => "form-horizontal" } do |f| %>
        <div class="form-group">
          <%= f.label :title, :col_sm => 2 %>
          <%= f.text_field :title, :col_sm => 3 %>
        </div>
        <div class="form-group">
          <%= f.label :artist, :col_sm => 2 %>
          <%= f.text_field :artist, :col_sm => 3 %>
        </div>
        <div class="form-group">
          <%= f.label :body, :col_sm => 2 %>
          <%= f.text_area :body, :style => "width:300px; height:200px; position:top" %>
        </div>
        <div class="form-group">
          <%= f.label :photo, :col_sm => 2 %>
          <%= f.file_field :photo %>
        </div>
        <div class="form-group">
          <%= f.label :material, :col_sm => 2 %>
          <%= f.text_field :material, :col_sm => 3 %>
        </div>
        <div class="form-group">
          <%= f.label :genre, :col_sm => 2 %>
          <%= f.text_field :genre, :col_sm => 3 %>
        </div>
        <div class="form-group">
          <%= f.label :location, :col_sm => 2 %>
          <%= f.text_field :location, :col_sm => 3 %>
        </div>

        <div class="col-sm-offset-2 col-sm-4 pull-left">
          <%= link_to "Go back", home_index_path, :class => "btn btn-danger"  %>
          <%= f.submit "Post" %>
        </div>
    <% end %>
  </div>
</div>